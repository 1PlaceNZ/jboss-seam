				<filter excludes="org.jboss.seam.annotations.*" />
				<filter excludes="org.jboss.seam.test.*" />
				<filter excludes="*.package-info.java" />
				<filter excludes="org.jboss.seam.text.*" />
			</instr>
		</emma>
	</target>

