#/bin/sh
############################################
#
# seam-gen
#
############################################

DIRNAME=`dirname $0`

if [ "x$SEAM_HOME" = "x" ]; then
    # get the full path (without any relative bits)
    SEAM_HOME=`cd $DIRNAME; pwd`
fi

cd $SEAM_HOME/seam-gen

# OS specific support (must be 'true' or 'false').
cygwin=false;
case "`uname`" in
    CYGWIN*)
        cygwin=true
        ;;
esac

if [ "${1}" = "" ]
then
   cat USAGE
elif [ "${1}" = help ]
then
   cat README
elif $cygwin 
then
   java -cp "${JAVA_HOME}\lib\tools.jar;..\lib\ant-nodeps.jar;..\lib\ant-launcher.jar;..\lib\ant.jar" -Dant.home=..\lib org.apache.tools.ant.launch.Launcher ${*}
else
   java -cp "${JAVA_HOME}/lib/tools.jar:../lib/ant-nodeps.jar:../lib/ant-launcher.jar:../lib/ant.jar" -Dant.home=../lib org.apache.tools.ant.launch.Launcher ${*}
fi

cd ..
