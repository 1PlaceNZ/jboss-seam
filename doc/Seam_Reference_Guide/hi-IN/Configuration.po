#. Tag: programlisting
#: Configuration.xml:663
#, no-c-format
msgid ""
"<![CDATA[<!-- Add this listener -->\n"
"  <Listener className=\"org.jboss.embedded.tomcat.WebinfScanner\"/>]]>"
msgstr ""

#. Tag: programlisting
#: Configuration.xml:664
#, no-c-format
msgid "<![CDATA[</Context>]]>"
msgstr ""

#. Tag: para
#: Configuration.xml:668
