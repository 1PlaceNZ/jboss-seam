"   </copy>\n"
"   <copy todir=\"${ear.dir}/META-INF\">\n"
"      <fileset dir=\"${basedir}/resources/META-INF\">\n"
"         <include name=\"application.xml\" />\n"
"         <include name=\"jboss-app.xml\" />\n"
"      </fileset>\n"
"   </copy>\n"
"</target>]]>"
msgstr ""

