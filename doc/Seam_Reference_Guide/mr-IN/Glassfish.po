"      <fileset dir=\"${lib.dir}\">\n"
"         <include name=\"jboss-seam.jar\" />\n"
"      </fileset>\n"
"      <fileset dir=\"${basedir}\">\n"
"         <include name=\"lib/jbpm*.jar\" />\n"
"         <include name=\"lib/jboss-el.jar\" />\n"
"         <include name=\"lib/drools-*.jar\"/>\n"
"         <include name=\"lib/core.jar\"/>\n"
