
<process-definition name="DocumentSubmission">
    <start-state>
        <transition to="review"/>
    </start-state>
    <task-node name="review">
        <task name="review">
           <assignment class="org.jboss.seam.example.bpm.AdminTaskAssignmentHandler"/>
        </task>
        <transition name="approve" to="complete"/>
        <transition name="reject" to="complete"/>
    </task-node>
    <end-state name="complete"/>
</process-definition>