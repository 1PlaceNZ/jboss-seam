<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE faces-config
      PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
      "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">

<faces-config>

    <navigation-rule>
       <description>global nav rules</description>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/home.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>tasks</from-outcome>
            <to-view-id>/tasks.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>myDocuments</from-outcome>
            <to-view-id>/myDocuments.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>detail</from-outcome>
            <to-view-id>/detail.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/tasks.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>review</from-outcome>
            <to-view-id>/review.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/review.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>approved</from-outcome>
            <to-view-id>/tasks.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>rejected</from-outcome>
            <to-view-id>/tasks.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <application>
        <view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
        <variable-resolver>org.jboss.seam.jsf.SeamVariableResolver</variable-resolver>
    </application>

    <lifecycle>
        <phase-listener>org.jboss.seam.jsf.SeamTransactionManagedPersistencePhaseListener</phase-listener>
    </lifecycle>

</faces-config>
