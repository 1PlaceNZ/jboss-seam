<!DOCTYPE pages PUBLIC
          "-//JBoss/Seam Pages Configuration DTD 1.1//EN"
          "http://jboss.com/products/seam/pages-1.1.dtd">

<pages no-conversation-view-id="/main.xhtml">

    <page view-id="/register.xhtml">
    
        <action if="#{validation.failed}"
           execute="#{register.invalid}"/>
    
        <action-navigation>
            <outcome if="#{register.registered}">
                <redirect view-id="/home.xhtml"/>
            </outcome>
        </action-navigation>
        
    </page>

    <page view-id="/home.xhtml">
    
        <action-navigation>
            <outcome if="#{login.loggedIn}">
                <redirect view-id="/main.xhtml"/>
            </outcome>
        </action-navigation>
        
    </page>
    
    <page view-id="/password.xhtml">
    
        <action-navigation>
            <outcome if="#{changePassword.changed}">
                <redirect view-id="/main.xhtml"/>
            </outcome>
        </action-navigation>
        
    </page>

    <page view-id="/main.xhtml">
    
        <action execute="#{login.validateLogin}"/>
        
        <action-navigation from-action="#{login.validateLogin}">
            <outcome if="#{not login.loggedIn}">
                <redirect view-id="/home.xhtml"/>
            </outcome>
        </action-navigation>
        
        <action-navigation from-action="#{hotelBooking.selectHotel(hot)}">
            <redirect view-id="/hotel.xhtml"/>
        </action-navigation>
        
    </page>

	<page view-id="/hotel.xhtml" 
          conversation-required="true">
          
        <description>View hotel: #{hotel.name}</description>
        
        <action-navigation from-action="#{hotelBooking.bookHotel}">
            <redirect view-id="/book.xhtml"/>
        </action-navigation>
        
    </page>

	<page view-id="/book.xhtml" 
          conversation-required="true">
          
        <description>Book hotel: #{hotel.name}</description>
        
        <action-navigation>
            <redirect view-id="/confirm.xhtml"/>
        </action-navigation>
        
    </page>

	<page view-id="/confirm.xhtml" 
          conversation-required="true">
          
        <description>Confirm booking: #{booking.description}</description>
        
        <action-navigation from-action="#{hotelBooking.confirm}">
            <redirect view-id="/main.xhtml"/>
        </action-navigation>
        
    </page>
    
    <page view-id="*">
    
        <action-navigation from-action="#{login.logout}">
            <redirect view-id="/home.xhtml"/>
        </action-navigation>

        <action-navigation from-action="#{hotelBooking.cancel}">
            <redirect view-id="/main.xhtml"/>
        </action-navigation>
        
    </page>

</pages>