<?xml version="1.0"?>
<!DOCTYPE facelet-taglib PUBLIC
        "-//Sun Microsystems, Inc.//DTD Facelet Taglib 1.0//EN"
        "http://java.sun.com/dtd/facelet-taglib_1_0.dtd">

<facelet-taglib>
    <namespace>http://jboss.com/products/seam/wiki</namespace>

    <function>
        <function-name>isDocument</function-name>
        <function-class>org.jboss.seam.wiki.core.node.NodeBrowser</function-class>
        <function-signature>boolean isDocument(org.jboss.seam.wiki.core.node.Node)</function-signature>
    </function>

    <function>
        <function-name>isDirectory</function-name>
        <function-class>org.jboss.seam.wiki.core.node.NodeBrowser</function-class>
        <function-signature>boolean isDirectory(org.jboss.seam.wiki.core.node.Node)</function-signature>
    </function>
    
    <function>
        <function-name>renderURL</function-name>
        <function-class>org.jboss.seam.wiki.core.links.WikiLinkResolver</function-class>
        <function-signature>java.lang.String renderURL(org.jboss.seam.wiki.core.node.Node)</function-signature>
    </function>

    <function>
        <function-name>convertToWikiName</function-name>
        <function-class>org.jboss.seam.wiki.core.links.WikiLinkResolver</function-class>
        <function-signature>java.lang.String convertToWikiName(java.lang.String)</function-signature>
    </function>

    <tag>
        <tag-name>formattedText</tag-name>
        <component>
            <component-type>org.jboss.seam.wiki.core.ui.UIWikiFormattedText</component-type>
        </component>
    </tag>

</facelet-taglib>
