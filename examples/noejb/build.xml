<?xml version="1.0"?>

<project name="Hibernate3" default="deploy" basedir=".">

    <!-- Naming -->
    <property name="Name"                   value="Seam on JBoss Hibernate3 Example"/>
    <property name="example.name"           value="jboss-seam-noejb"/>
    
    <!-- WAR -->
    <zipfileset id="example.war.docroot"
               dir="view">
        <include name="**/*"/>
    </zipfileset>
	
    <zipfileset id="example.war.webinf"
            prefix="WEB-INF"
               dir="resources/WEB-INF" >
        <include name="**/*"/>
        <exclude name="lib/**/*"/>
    </zipfileset>
	
    <zipfileset id="example.war.webinf.lib"
            prefix="WEB-INF/lib"
               dir="resources/WEB-INF/lib/">
        <include name="*.jar"/>
    </zipfileset>
    
    <!-- EJB3 -->
    <fileset id="example.ejb3.root" dir=".">
        <include name="_NONE_"/>
    </fileset>

    <fileset id="example.ejb3.lib" dir="../../lib">
        <include name="_NONE_"/>
    </fileset>
  
    <!-- EAR -->
    <zipfileset id="example.ear.resources" dir=".">
        <include name="_NONE_"/>
    </zipfileset>

    <!-- Test -->
    <fileset id="example.resources" dir="resources">
        <include name="**/*.*"/>
    </fileset>

    <!-- Tomcat build -->
    <fileset id="example.tomcat.war.webinf"
            dir="resources/WEB-INF" >
        <include name="faces-config.xml"/>
        <include name="pages.xml"/>
    </fileset>
    
    <fileset id="example.tomcat.war.webinf.extra"
            dir="resources/tomcat">
        <include name="web.xml"/>
    </fileset>
    
    <fileset id="example.tomcat.jar"
            dir="resources">
        <include name="seam.properties"/>
        <include name="hibernate.cfg.xml"/>
        <include name="import.sql"/>
        <include name="seam-jndi.properties"/>
        <include name="jboss-beans.xml"/>
    </fileset>
    
    <!-- Deploy -->
    <fileset id="example.deploy"
            dir="resources">
        <include name="noejb-ds.xml"/>
    </fileset>

    <!-- Undeploy -->
    <patternset id="example.undeploy">
        <include name="noejb-ds.xml"/>
    </patternset>

    <!-- Overrides -->
    <property name="src.java.dir" value="src"/>
    <property name="src.test.dir" value="src"/>
    <property name="test.classpath" value="test.mc.classpath"/>
    <property name="tomcat.conf" value="mc.conf"/>
    <property name="tomcat.lib" value="mc.lib"/>

    <import file="../../build.xml"/>

    <!-- Redefine targets -->
    <target name="war" depends="compile">
        <mkdir dir="${build.dir}/resources/WEB-INF/lib/"/>
        
    	<jar jarfile="${build.dir}/resources/WEB-INF/lib/${example.name}.jar">
          <fileset refid="example.classes"/>
          <fileset dir="resources">
            <include name="seam.properties"/>
          </fileset>
        </jar>
    	
        <copy todir="${build.dir}/resources/WEB-INF">
          <fileset dir="resources/WEB-INF">
            <include name="web.xml"/>
            <include name="pages.xml"/>
            <include name="jboss-web.xml"/>
            <include name="faces-config.xml"/>
          </fileset>
        </copy>
    	
        <copy todir="${build.dir}/resources/WEB-INF/classes">
          <fileset dir="resources">
            <include name="import.sql"/>
            <include name="hibernate.cfg.xml"/>
          </fileset>
        </copy>
    	
        <copy file="${imported.basedir}/${name}.jar" 
             todir="${build.dir}/resources/WEB-INF/lib/"/>
    	
        <copy todir="${build.dir}/resources/WEB-INF/lib/">
            <fileset dir="resources/WEB-INF/lib/">
                <include name="*.jar"/>
            </fileset>
        </copy>
    	
        <antcall target="Seam.war"/>
    </target>
    
    <target name="deploy" depends="war"
            description="Deploy the example war to JBoss">
        <antcall target="Seam.deploy"><param name="unit.ext" value="war"/></antcall>
    </target>

    <target name="undeploy"
    	    description="Undeploy the example war from JBoss">
        <antcall target="Seam.undeploy"><param name="unit.ext" value="war"/></antcall>
    </target>

</project>
