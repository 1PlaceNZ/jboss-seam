<process-definition name="OrderManagement">
    <start-state>
        <transition to="process"/>
    </start-state>

    <task-node name="process">
        <task name="ship">
           <assignment class="org.jboss.seam.jbpm.SeamAssignmentHandler">
              <pooledActors>#{shipperAssignment.pooledActor}</pooledActors>
           </assignment>
        </task>
        <transition name="shipped" to="complete">
            <action class="org.jboss.seam.jbpm.SeamActionHandler">
                <action>#{afterShippedAction.log}</action>
            </action>
        </transition>
    </task-node>

    <end-state name="complete"/>
</process-definition>
