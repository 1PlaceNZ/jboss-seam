<?xml version="1.0"?>

<project name="pdf" default="deploy" basedir=".">

    <!-- Example name -->
    <property name="Name"                   value="iText PDF document example"/>
    <property name="example.name"           value="jboss-seam-document"/>

    <!-- Overrides -->
    <property name="example.webinf.lib.dir"  value="lib"/>
    <property name="example.seam.ui.lib"     value="yes"/>
    <property name="example.seam.pdf.lib"    value="yes"/>
    <property name="example.seam.debug.lib"  value="yes"/>
    <property name="example.facelets.lib"    value="yes"/>
    <property name="src.java.dir"            value="src"/>
    <property name="src.test.dir"            value="src"/>
    <property name="test.classpath"          value="test.eejb.classpath"/>
    <property name="tomcat.conf"             value="eejb.conf"/>  
    

    <import file="../../build.xml"/>

    <fileset id="example.local.jar" dir="lib">
        <include name="**/*.jar" />
    </fileset>

    <path id="example.path">
        <fileset refid="example.local.jar" />
    </path>
   
    <zipfileset id="example.ear.resources"
               dir="${example.resources.dir}">
        <include name="META-INF/application.xml"/>
        <include name="META-INF/jboss-app.xml"/>
        <include name="*.keystore"/>
        <include name="lib/*.jar" />
    </zipfileset>

</project>

