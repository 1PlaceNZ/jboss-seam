<security-config>
  
  <roles>
    <role name="admin">
      <memberships>superuser</memberships>
    </role>
    
    <role name="superuser">
      <memberships>user</memberships>   
    </role>
    
    <role name="user">
      <permissions>       
        <permission name="blog" action="createComment"/>
      </permissions>    
    </role>
  </roles>
  
  <loginmodules>
    <loginmodule class="org.jboss.seam.security.spi.SeamLoginModule" flag="required">
      <option name="authMethod">#{login.authenticate}</option>
    </loginmodule>
  </loginmodules>

</security-config>