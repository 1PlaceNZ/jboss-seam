<security-config>
  
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Secure Page</web-resource-name>
      <url-pattern>/welcome.seam</url-pattern>
    </web-resource-collection>
    
    <auth-constraint>
      <role-name>user</role-name>
    </auth-constraint>
  </security-constraint>
  
  <roles>
    <role name="admin">
      <memberships>superuser</memberships>
      
      <permissions>
        <permission name="user" action="create"/>
        <permission name="user" action="modify"/>
        <permission name="user" action="delete"/>
      </permissions>
    </role>
    
    <role name="superuser">
      <memberships>user</memberships>
    
      <permissions>
        <permission name="account" action="create"/>
        <permission name="account" action="delete"/>
      </permissions>      
    </role>
    
    <role name="user">
      <permissions>
        <permission name="customer" action="create"/>
        <permission name="customer" action="delete"/>
      </permissions>    
    </role>
    
    <role name="guest">
      
    </role>
    
  </roles>
  
  <loginmodules>
    <loginmodule class="org.jboss.seam.example.seamspace.AuthenticatorAction" flag="required"/>
  </loginmodules>

</security-config>