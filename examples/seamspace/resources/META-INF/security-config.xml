<security-config>
  
  <roles>
    <role name="admin">
      <memberships>superuser</memberships>
    </role>
    
    <role name="superuser">
      <memberships>user</memberships>   
    </role>
    
    <role name="user">
      <permissions>       
        <permission name="blog" action="createComment"/>
      </permissions>    
    </role>
  </roles>
  
  <application-policy>
    <authentication>
	    <login-module code="org.jboss.seam.security.spi.SeamLoginModule" flag="required">
	      <module-option name="authMethod">#{login.authenticate}</module-option>
	    </login-module>
	  </authentication>
  </application-policy>

</security-config>