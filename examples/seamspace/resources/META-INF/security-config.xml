<security-config>
  
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Secure Page</web-resource-name>
      <url-pattern>/welcome.seam</url-pattern>
    </web-resource-collection>
    
    <auth-constraint>
      <role-name>user</role-name>
    </auth-constraint>
  </security-constraint>
  
  <roles>
    <role name="admin">
      <members>superuser</members>
      
      <permissions>
        <permission name="user" action="create"/>
        <permission name="user" action="modify"/>
        <permission name="user" action="delete"/>
      </permissions>
    </role>
    
    <role name="superuser">
      <members>user</members>
    
      <permissions>
        <permission name="account" action="create"/>
        <permission name="account" action="delete"/>
      </permissions>      
    </role>
    
    <role name="user">
      <permissions>
        <permission name="customer" action="create"/>
        <permission name="customer" action="delete"/>
      </permissions>    
    </role>
    
    <role name="guest">
      
    </role>
    
  </roles>

</security-config>