<?xml version="1.0"?>

<project name="Registration" default="deploy" basedir=".">

    <!-- Example name -->
    <property name="Name"                   value="Seam Registration Example"/>
    <property name="example.name"           value="jboss-seam-registration"/>

    <!-- Example WAR packaging -->
    <property name="example.war.webinf"     value="resources/WEB-INF"/>
    <property name="example.war.docroot"    value="resources/jsp"/>

    <!-- Example EJB3 packaging -->
    <fileset id="example.ejb3.resources"
            dir="resources">
        <include name="import.sql"/>
        <include name="seam.properties"/>
        <include name="META-INF/persistence.xml"/>
    </fileset>

    <!-- Example EAR packaging -->
    <zipfileset id="example.ear.resources"
            dir="resources">
        <include name="META-INF/*"/>
    </zipfileset>

    <!-- Example overrides -->
    <property name="src.java.dir"            value="src"/>

    <import file="../../build.xml"/>
</project>

