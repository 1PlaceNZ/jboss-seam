<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE faces-config 
PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
                            "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">
<faces-config>

	<managed-bean>
		<managed-bean-name>item</managed-bean-name>
		<managed-bean-class>
			org.hibernate.ce.auction.model.Item
		</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>jsfItemManager</managed-bean-name>
		<managed-bean-class>
			org.hibernate.ce.auction.process.JsfItemManager
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<navigation-rule>
        <from-view-id>/menu.jsp</from-view-id>    
        <navigation-case>        
            <from-outcome>create</from-outcome>      
            <to-view-id>/createItem.jsp</to-view-id>    
        </navigation-case>  
    </navigation-rule>

	<navigation-rule>
        <from-view-id>/menu.jsp</from-view-id>    
        <navigation-case>        
            <from-outcome>admin</from-outcome>      
            <to-view-id>/admin.jsp</to-view-id>    
        </navigation-case>  
    </navigation-rule>

	<navigation-rule>
        <from-view-id>/createItem.jsp</from-view-id>    
        <navigation-case>        
            <from-outcome>view</from-outcome>      
            <to-view-id>/viewItem.jsp</to-view-id>    
        </navigation-case>  
    </navigation-rule>

	<navigation-rule>
        <from-view-id>/viewItem.jsp</from-view-id>    
        <navigation-case>        
            <from-outcome>edit</from-outcome>      
            <to-view-id>/editItem.jsp</to-view-id>    
        </navigation-case>  
    </navigation-rule>

	<navigation-rule>
        <from-view-id>/viewItem.jsp</from-view-id>    
        <navigation-case>        
            <from-outcome>submit</from-outcome>      
            <to-view-id>/done.jsp</to-view-id>    
        </navigation-case>  
    </navigation-rule>

	<navigation-rule>
        <from-view-id>/editItem.jsp</from-view-id>    
        <navigation-case>        
            <from-outcome>save</from-outcome>      
            <to-view-id>/viewItem.jsp</to-view-id>    
        </navigation-case>  
    </navigation-rule>

</faces-config>
