<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE faces-config 
PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
                            "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">
<faces-config>

    <navigation-rule>

        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/home.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/welcome.xhtml</to-view-id>
            <redirect />
        </navigation-case>        
        
        <navigation-case>
          <from-outcome>protected</from-outcome>
          <to-view-id>/protected.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
          <from-outcome>modified</from-outcome>
          <to-view-id>/modified.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
          <from-outcome>securityError</from-outcome>
          <to-view-id>/securityError.xhtml</to-view-id>
        </navigation-case>
        
    </navigation-rule>

    <application>
        <view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
    </application>

    <!-- Phase listener needed for all Seam applications -->

    <lifecycle>
        <phase-listener>org.jboss.seam.jsf.SeamPhaseListener</phase-listener>
    </lifecycle>

</faces-config>
