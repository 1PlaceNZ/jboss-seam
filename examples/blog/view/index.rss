<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE rss 
   PUBLIC "-//Netscape Communications//DTD RSS 0.91//EN" 
   "http://my.netscape.com/publish/formats/rss-0.91.dtd">

<rss version="0.91" 
     xmlns:ui="http://java.sun.com/jsf/facelets"
     xmlns:h="http://java.sun.com/jsf/html">
  <channel>
    
    <title>#{blog.name}</title>
    <link>http://localhost:8080/seam-blog/seam/index.xhtml</link>
    <description>#{blog.description}</description>
    <language>en</language>
    
    <ui:repeat value="#{blog.recentBlogEntries}" var="blogEntry">
    <item>
       <title>#{blogEntry.title}</title>
       <link>http://localhost:8080/seam-blog/seam/entry.xhtml?blogEntryId=#{blogEntry.id}</link>
       <description>
          <h:outputText value="#{blogEntry.excerpt==null ? blogEntry.body : blogEntry.excerpt}"/>
       </description>
    </item>
    </ui:repeat>
    
  </channel>
</rss>