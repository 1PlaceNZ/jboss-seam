<?xml version="1.0" encoding="UTF-8"?>
<deployment xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="urn:jboss:bean-deployer bean-deployer_1_0.xsd"
            xmlns="urn:jboss:bean-deployer">
            
   <bean name="@projectName@DatasourceBootstrap" class="org.jboss.resource.adapter.jdbc.local.LocalTxDataSource">
      <property name="driverClass">@driverClass@</property>
      <property name="connectionURL">@jdbcUrl@</property>
      <property name="userName"><value class="java.lang.String">@username@</value></property>
      <property name="password"><value class="java.lang.String">@password@</value></property>
      <property name="jndiName">java:/@projectName@Datasource</property>
      <property name="minSize">0</property>
      <property name="maxSize">10</property>
      <property name="blockingTimeout">1000</property>
      <property name="idleTimeout">100000</property>
      <property name="transactionManager"><inject bean="TransactionManager"/></property>
      <property name="cachedConnectionManager"><inject bean="CachedConnectionManager"/></property>
      <property name="initialContextProperties"><inject bean="InitialContextProperties"/></property>
   </bean>

   <bean name="@projectName@Datasource" class="java.lang.Object">
      <constructor factoryMethod="getDatasource">
         <factory bean="@projectName@DatasourceBootstrap"/>
      </constructor>
   </bean>

</deployment>