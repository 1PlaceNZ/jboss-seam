<?xml version="1.0"?>

<pageflow-definition name="shellflow">

	<start-page name="start" view-id="/home.xhtml">
      <redirect/>
      <transition name="first-page" to="first-page"/>
   </start-page>

   <page name="first-page" view-id="/first-page.xhtml">
      <redirect/>
      <transition to="first-page"/>
      <transition name="continue-flow" to="continue-flow-decision"/>     
   </page>
   
   <decision name="continue-flow-decision" expression="#{flowBean.continueFlow}">
      <transition name="true" to="second-page"/>
      <transition name="false" to="start"/>
   </decision>

   <page name="second-page" view-id="/second-page.xhtml">
      <redirect/>
      <transition to="second-page"/>
      <transition name="third-page" to="third-page"/>
   </page>
   
   <page name="third-page" view-id="/third-page.xhtml">
      <redirect/>
      <end-conversation />
   </page>  
   
</pageflow-definition>